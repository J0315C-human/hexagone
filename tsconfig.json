{
    "compilerOptions": {
        "module": "esnext",
        "target": "es5",
        "noImplicitAny": false,
        "strict": false,
        "lib": [
            "es2016",
            "dom"
        ],
        "moduleResolution": "node",
        "sourceMap": false,
        "outDir": "dist",
        "allowJs": true,
        "baseUrl": ".",
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "suppressImplicitAnyIndexErrors": true,
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}